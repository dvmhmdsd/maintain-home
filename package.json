{
  "name": "maintain-home",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix && npm run copy-files",
    "build": "tsc && nodemon",
    "postbuild": "cd dist/ && nodemon && cd ..",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "start:dev": "concurrently \"nodemon\" \"cd dashboard/ && ng serve\" && cd ..",
    "back-start:dev": "npm run build",
    "copy-files": "copyfiles -e ./tsconfig.json -e ./tslint.json ./*.js ./*.json .env dist/"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,md}": [
      "npm run prebuild",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "bcrypt": "^5.0.0",
    "cloudinary": "^1.21.0",
    "concurrently": "^5.1.0",
    "copyfiles": "^2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.9",
    "multer": "^1.4.2",
    "multer-storage-cloudinary": "^2.2.1",
    "pm2": "^4.2.3",
    "prettier": "^2.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.6.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "author": "Mohamed Saad",
  "license": "MIT"
}
